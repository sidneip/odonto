<div class="page-header">
  <h1>Adicionar Procedimento</h1>
</div>
<%= simple_form_for @descritivo_fatura, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :fatura_id %>
  <%= f.input :descricao %>
  <%= f.input :valor %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                descritivo_faturas_path, :class => 'btn' %>
  </div>
<% end %>
