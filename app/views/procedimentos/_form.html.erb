<%= semantic_form_for @procedimento, :html => { :class => 'form-horizontal' } do |f| %>
<% if @procedimento.errors.any? %>
<div class="alert alert-error">
<%= f.semantic_errors *f.object.errors.keys%>
</div>
<%end%>
  <div class="control-group">
    <%= f.label :nome, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nome, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tipo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tipo, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :valor, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :valor, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :custo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :custo, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                procedimentos_path, :class => 'btn' %>
  </div>
<% end %>
