<script>
jQuery(function($){
         $("#dentista_data_nasc").mask("99/99/9999");
         $("#dentista_telefone").mask("(99)9999-999");
         $("#dentista_cpf").mask("999.999.999-99");
         $('#dentista_identidade_rg').mask('99.999.999-9');
         $('#dentista_cep').mask('99999-999');
         $('#dentista_celular').mask("(99) 9999-9999?9").ready(function(event) {
            var target, phone, element;
            target = (event.currentTarget) ? event.currentTarget : event.srcElement;
            phone = target.value.replace(/\D/g, '');
            element = $(target);
            element.unmask();
            if(phone.length > 10) {
                element.mask("(99) 99999-999?9");
            } else {
                element.mask("(99) 9999-9999?9");
            }
});
  });
</script>
<%= javascript_include_tag "mask" %>