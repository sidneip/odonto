<%- model_class = Convenio -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:codigo_convenio) %></th>
      <th><%= model_class.human_attribute_name(:cnpj) %></th>
      <th><%= model_class.human_attribute_name(:razao_social) %></th>
      <th><%= model_class.human_attribute_name(:nome_fantasia) %></th>
      <th><%= model_class.human_attribute_name(:logradouro) %></th>
      <th><%= model_class.human_attribute_name(:numero) %></th>
      <th><%= model_class.human_attribute_name(:bairro) %></th>
      <th><%= model_class.human_attribute_name(:complemento) %></th>
      <th><%= model_class.human_attribute_name(:cep) %></th>
      <th><%= model_class.human_attribute_name(:uf) %></th>
      <th><%= model_class.human_attribute_name(:cidade) %></th>
      <th><%= model_class.human_attribute_name(:telefone) %></th>
      <th><%= model_class.human_attribute_name(:fax) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @convenios.each do |convenio| %>
      <tr>
        <td><%= link_to convenio.id, convenio_path(convenio) %></td>
        <td><%= convenio.codigo_convenio %></td>
        <td><%= convenio.cnpj %></td>
        <td><%= convenio.razao_social %></td>
        <td><%= convenio.nome_fantasia %></td>
        <td><%= convenio.logradouro %></td>
        <td><%= convenio.numero %></td>
        <td><%= convenio.bairro %></td>
        <td><%= convenio.complemento %></td>
        <td><%= convenio.cep %></td>
        <td><%= convenio.uf %></td>
        <td><%= convenio.cidade %></td>
        <td><%= convenio.telefone %></td>
        <td><%= convenio.fax %></td>
        <td><%= convenio.email %></td>
        <td><%=l convenio.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_convenio_path(convenio), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      convenio_path(convenio),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_convenio_path,
            :class => 'btn btn-primary' %>
